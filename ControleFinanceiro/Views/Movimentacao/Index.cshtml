@model ControleFinanceiro.Models.MovimentacaoViewModel

@{
    ViewData["Title"] = "Movimentações";
}

<h3>Movimentações</h3>
<hr />
<form method="post">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <input class="btn btn-secondary" type="submit" value="Anterior" asp-for="Direcao">
        </div>
        <div class="col-auto">
            <input readonly asp-for="Periodo" class="form-control">
        </div>
        <div class="col-auto">
            <input class="btn btn-secondary" type="submit" value="Próxima" asp-for="Direcao">
        </div>
    </div>
</form>
<br />
<div class="row g-3 align-items-center">
    <div class="col-auto">
        <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<br />
<div class="container text-center">
    <div class="row">
        <div class="col">
            <h3>Saídas <span class="badge bg-danger">@Model.ValorTotalSaida.ToString("C")</span></h3>
        </div>
        <div class="col">
            <h3>Entradas <span class="badge bg-success">@Model.ValorTotalEntrada.ToString("C")</span></h3>
        </div>
        <div class="col">
            <h3>Parcelamentos <span class="badge bg-info">@Model.ValorTotalDeParcelamento.ToString("C")</span></h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3>Valor liberado <span class="badge bg-info"> @Model.ValorAmortizadoNoMes.ToString("C")</span></h3>
        </div>
        <div class="col">
            @* <h3>Avulso <span class="badge bg-danger">@Model.DespesasAvulsas.ToString("C")</span></h3> *@
        </div>
        <div class="col">
            @*             <h3>Parcelamentos <span class="badge bg-warning">@Model.ValorTotalDeParcelamento.ToString("C")</span></h3> *@
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-dark">
            <td>Meio de parcelamento</td>
            <td>Data da compra</td>
            <td>Data da movimentação</td>
            <td>Categoria</td>
            <td>Descrição</td>
            <td>Valor</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movimentacoes)
        {
            <tr class="@(item.UltimaParcela?"table-success": "")">
                <td>@item.MeioDeParcelamento</td>
                <td>@item.DataDaCompra.ToShortDateString()</td>
                <td>@item.DataMovimentacao.ToShortDateString()</td>
                <td>@item.Categoria</td>
                <td>@item.Descricao</td>
                <td class="@item.CorDoTextDeValor">@item.Valor.ToString("C")</td>
                <td><a asp-action="Editar" class="btn btn-primary" asp-route-codigo="@item.Codigo">Editar</a></td>
            </tr>
        }
        <tr class="table table-dark">
            <td colspan="5">Total</td>
            <td colspan="2">@Model.Valor.ToString("C")</td>
        </tr>
    </tbody>
</table>
<br />
<br />

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table table-dark">
            <td class="text-center" colspan="2">Movimentações por categoria</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TotaisPorCategoria)
        {
            <tr>
                <td>@item.Categoria</td>
                <td>@item.Valor.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />
<table class="table table-hover table-bordered">
    <thead>
        <tr class="table table-dark">
            <td class="text-center" colspan="2">Parcelamentos por categoria</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TotaisPorCategoriaParcelamentos)
        {
            <tr>
                <td>@item.Categoria</td>
                <td>@item.Valor.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

