@model IEnumerable<ControleFinanceiro.Models.MovimentacaoCategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<h3>Categorias</h3>
<hr />

<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>

<br />
<br />

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-primary">
            <td>Código</td>
            <td>Categoria</td>
            <td>Ativo</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
                <td>@item.Ativo</td>
                <td><a asp-action="Editar" class="btn btn-primary" asp-route-codigo="@item.Codigo">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
