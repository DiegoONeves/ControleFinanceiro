<div class="container text-center">
    <div class="row">
        <div class="col">
            <h3>Dívida total <span class="badge bg-danger">@Model.DividaTotal.ToString("C")</span></h3>
        </div>
        <div class="col">
            Column
        </div>
        <div class="col">
            Column
        </div>
    </div>
</div>

<div class="container text-center">
    <table class="table table-hover table-bordered">
        <tr class="table table-dark">
            <td class="text-center" colspan="2">Movimentações por categoria</td>
        </tr>
        @foreach (var item in Model.DividaPorCategoria)
        {
            <tr>
                <td>@item.Categoria</td>
                <td>@item.Valor.ToString("C")</td>
            </tr>
        }
    </table>
</div>


